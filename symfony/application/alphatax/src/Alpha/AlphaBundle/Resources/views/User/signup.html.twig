{# Twig template for login form #}
{% extends 'AlphaAlphaBundle::layout.html.twig' %}
{% form_theme form 'form_table_layout.html.twig' %}
{% block title %}AlphaAlphaBundle:User:login{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <style type="text/css">
        body {
            padding-top: 150px;
            padding-bottom: 40px;
            background-color: #f5f5f5;
        }

        .form-signin {
            max-width: 400px;
            padding: 19px 29px 29px;
            margin: 0 auto 20px;
            background-color: #fff;
            border: 1px solid #e5e5e5;
            -webkit-border-radius: 5px;
            -moz-border-radius: 5px;
            border-radius: 5px;
            -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            box-shadow: 0 1px 2px rgba(0,0,0,.05);
        }
        .form-signin .form-signin-heading,
        .form-signin .checkbox {
            margin-bottom: 10px;
        }
        .form-signin input[type="text"],
        .form-signin input[type="email"],
        .form-signin input[type="password"] {
            font-size: 16px;
            height: auto;
            margin-bottom: 15px;
            padding: 7px 9px;
        }
        .checkbox {
            padding-left: 30px;
        }

    </style>
{%endblock%}

{%block body %}
    {% for flashMessage in app.session.flashbag.get('user-saved') %}
    <div class="alert alert-success" role="alert">    
        {{ flashMessage }}
        <a href="{{ path('login') }}">Login To Proceed</a>
    </div>
    {% endfor %}
    
    <div class="container" >
        <form action="#" method="post" {{ form_enctype(form) }} class="form-signin">
            <h2>Sign Up</h2>
            {{ form_widget(form) }}
        <p>
        <button class="btn btn-large btn-primary" type="submit">Sign up</button>
        </p>
        </form>
    </div>
{%endblock%}
