{# Twig template for login form #}
{% extends 'AlphaAlphaBundle::layout.html.twig' %}

{% block title %}AlphaAlphaBundle:User:login{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style type="text/css">
        body {
            padding-top: 150px;
            padding-bottom: 40px;
            background-color: #f5f5f5;
        }

        .form-signin {
            max-width: 300px;
            padding: 19px 29px 29px;
            margin: 0 auto 20px;
            background-color: #fff;
            border: 1px solid #e5e5e5;
            -webkit-border-radius: 5px;
            -moz-border-radius: 5px;
            border-radius: 5px;
            -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            box-shadow: 0 1px 2px rgba(0,0,0,.05);
        }
        .form-signin .form-signin-heading,
        .form-signin .checkbox {
            margin-bottom: 10px;
        }
        .form-signin input[type="text"],
        .form-signin input[type="password"] {
            font-size: 16px;
            height: auto;
            margin-bottom: 15px;
            padding: 7px 9px;
        }
        .checkbox {
            padding-left: 30px;
        }

    </style>
{%endblock%}
{%block body %}
    <div class="container">
        
        <form class="form-signin" method ="POST" action="#">
            {% for flashMessage in app.session.flashbag.get('login-failed') %}
            <div class="alert-danger fade in">
            <strong>Invalid Username/Password!!</strong>
            </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('login-required') %}
            <div class="alert-danger fade in">
            <strong>Login Required!!</strong>
            </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('user-loggged-out') %}
            <div class="alert-success fade in">
            <strong>Logged out Successfully!!</strong>
            </div>
            {% endfor %}
            <h2 class="form-signin-heading">Please sign in</h2>
            <input type="text" id="username" class="input-block-level" name="username" placeholder="Username">
            <input type="password" class="input-block-level" name="password" placeholder="Password">
            <label class="checkbox">
                <input type="checkbox" name="remember" value="remember-me"> Remember me
            </label>
            <button class="btn btn-large btn-primary" type="submit">Sign in</button>
            <a href="{{ path('signup') }}" >Sign Up</a>
        </form>
        
    </div> 
{%endblock%}